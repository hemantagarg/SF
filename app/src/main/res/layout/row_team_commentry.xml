<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp5"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp5"
        android:weightSum="6">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_over_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Over"
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/text_over_string"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/text_over_count"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11" />


        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp3"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@color/textcolordark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_weight="5"
            android:orientation="vertical"
            android:padding="@dimen/dp5">

            <TextView
                android:id="@+id/text_bowlingString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/text_out_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
