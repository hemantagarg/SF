<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="3sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/dp10">

            <ImageView
                android:id="@+id/image_team"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/logo_sportz"
                android:padding="@dimen/dp10"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/text_event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@+id/image_team"
                android:padding="@dimen/dp10"
                android:text="EVENT TYPE"
                android:textColor="@color/logocolor"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/event_type"
            android:alpha=".3"
            android:background="@color/view_color" />

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/event_type">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_header1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10">

                    <TextView
                        android:id="@+id/text_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/dp5"
                        android:scaleType="fitXY"
                        android:text="TUESDAY" />

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_day"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="28"
                        android:textSize="@dimen/dp40" />

                    <TextView
                        android:id="@+id/text_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_date"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/dp2"
                        android:text="nov" />

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_month"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:text="12:30 pm" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toRightOf="@+id/rl_header1"
                    android:padding="@dimen/dp5">

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Madhav"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/text_teamname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_name"
                        android:text="vs"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/text_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/text_teamname"
                        android:layout_marginTop="@dimen/dp5"
                        android:drawableLeft="@drawable/location"
                        android:drawablePadding="@dimen/dp10"
                        android:gravity="center"
                        android:text="location"
                        android:textSize="@dimen/text_size_14" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_header1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="@dimen/dp40"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@drawable/green_button_selecor">

                        <Button
                            android:id="@+id/btn_confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp40"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/tick"
                            android:gravity="center"
                            android:text="I'M IN"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="@dimen/dp40"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp20"
                        android:background="@drawable/blue_button_selecor">

                        <Button
                            android:id="@+id/btn_reject"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp40"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:text="I'M OUT"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_below="@+id/lin_btn"
                    android:alpha=".3"
                    android:background="@color/view_color" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
