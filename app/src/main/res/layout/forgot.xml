<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/black">

            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/dp20"
            android:src="@drawable/logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_signup"
            android:layout_below="@+id/image_logo"
            android:background="@drawable/vectorlogin"
            android:orientation="vertical"
            android:padding="@dimen/dp40">

            <com.app.sportzfever.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:text="Forgot Password"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_facebook"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp10"
                    android:src="@drawable/fb" />

                <ImageView
                    android:id="@+id/image_twitter"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp10"
                    android:src="@drawable/tw" />

            </LinearLayout>


            <com.app.sportzfever.utils.CustomTextView
                android:id="@+id/textOr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/or"
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="start"
                android:hint="@string/hint_enter_email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dp14"
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_15" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dp20"
                android:background="@color/logocolor"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <com.app.sportzfever.utils.CustomTextView
                android:id="@+id/createAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:text="Don't have an account?"
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_13" />

            <com.app.sportzfever.utils.CustomTextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/createAccount"
                android:paddingBottom="@dimen/dp10"
                android:paddingLeft="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:text="Sign up"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
